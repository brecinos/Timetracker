@model IEnumerable<persons.Models.Person>
@{
    ViewBag.Title = "Index";
}

<h2>Person</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
          First  Name
        </th>
        <th>
          Last  Name
        </th>
        <th>
           Telephone
        </th>
    </tr>

@foreach (var person in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=person.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=person.id })
        </td>
        <td>
            @person.firstname
        </td>
        <td>
            @person.lastname
        </td>
        <td>
            @person.telephone
        </td>
    </tr>
}

</table>